<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001D171F"
    android:scrollbarSize="10sp"
    tools:context=".Timelapse">

    <Button
        android:id="@+id/timelapse"
        android:layout_width="76dp"
        android:layout_height="68dp"
        android:layout_marginBottom="16dp"
        android:background="#1D171F"
        android:text="Timelapse Starten"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:keepScreenOn="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CustomView" />

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:keepScreenOn="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <TextView
        android:id="@+id/textViewX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textViewY"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/b_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/btn_b"
        tools:layout_editor_absoluteY="259dp" />

    <TextView
        android:id="@+id/b_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/btn_b"
        app:layout_constraintTop_toBottomOf="@+id/b_x" />

    <TextView
        android:id="@+id/textViewY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textViewZ"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/timelapse"
        app:layout_constraintStart_toStartOf="parent" />

    <view
        android:id="@+id/joystickCamera"
        class="io.github.controlwear.virtual.joystick.android.JoystickView"
        android:layout_width="144dp"
        android:layout_height="145dp"
        android:hapticFeedbackEnabled="false"
        app:JV_backgroundColor="#2EE51F1F"
        app:JV_borderColor="#22E51F1F"
        app:JV_borderWidth="1sp"
        app:JV_buttonColor="#D9F83C3C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Punkt A Setzen"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="364dp" />

    <Button
        android:id="@+id/moveToA"
        android:layout_width="123dp"
        android:layout_height="84dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="84dp"
        android:text="Bewege zu A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/moveToB"
        android:layout_width="123dp"
        android:layout_height="84dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="232dp"
        android:text="Bewege zu B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textViewData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewZ" />

    <TextView
        android:id="@+id/textViewSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/seekBarSpeed"
        app:layout_constraintEnd_toEndOf="@+id/seekBarSpeed"
        app:layout_constraintStart_toStartOf="@+id/seekBarSpeed" />

    <SeekBar
        android:id="@+id/seekBarSpeed"
        android:layout_width="144dp"
        android:layout_height="51dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="340dp"
        android:foregroundTint="#ED1A1A"
        android:progress="50"
        android:progressTint="#E31F1F"
        android:thumbTint="#D008E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="i"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/btn_joy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joy"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="96dp" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btn_motion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motion"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/btn_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="194dp" />

    <Button
        android:id="@+id/btn_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="242dp" />

    <Button
        android:id="@+id/btn_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        tools:layout_editor_absoluteX="602dp"
        tools:layout_editor_absoluteY="205dp" />

    <view
        android:id="@+id/CustomView"
        class="com.example.bt_firsttry.views.CustomView"
        android:layout_width="731dp"
        android:layout_height="412dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/c_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/c_x"
        tools:layout_editor_absoluteX="521dp" />

    <TextView
        android:id="@+id/c_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/btn_c"
        app:layout_constraintTop_toTopOf="@+id/btn_c" />

    <TextView
        android:id="@+id/a_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/btn_a"
        app:layout_constraintTop_toTopOf="@+id/btn_a" />

    <TextView
        android:id="@+id/a_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1D171F"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/btn_a"
        app:layout_constraintTop_toBottomOf="@+id/a_x" />

    <Button
        android:id="@+id/btn_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        tools:layout_editor_absoluteX="487dp"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/btn_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        tools:layout_editor_absoluteX="433dp"
        tools:layout_editor_absoluteY="335dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="305dp"
        android:layout_height="34dp"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="208dp" />

</androidx.constraintlayout.widget.ConstraintLayout>